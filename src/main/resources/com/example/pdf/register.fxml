<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" stylesheets="@register.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pdf.RegisterController">

    <!-- Title Label -->
    <Label fx:id="titleLabel" alignment="CENTER" text="Create an Account" textFill="white" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="30.0">
        <font><Font size="24.0" /></font>
    </Label>

    <!-- Username -->
    <Label text="Username" textFill="white" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="100.0" />
    <TextField fx:id="usernameField" prefHeight="35.0" promptText="Enter Username" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0" />

    <!-- Email -->
    <Label text="Email" textFill="white" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="150.0" />
    <TextField fx:id="emailField" prefHeight="35.0" promptText="Enter Email" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="150.0" />

    <!-- Password -->
    <Label text="Password" textFill="white" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="200.0" />
    <PasswordField fx:id="passwordField" prefHeight="35.0" promptText="Enter Password" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="200.0" />

    <!-- Confirm Password -->
    <Label text="Confirm Password" textFill="white" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="250.0" />
    <PasswordField fx:id="confirmPasswordField" prefHeight="35.0" promptText="Re-enter Password" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="250.0" />

    <!-- Register Button -->
    <Button fx:id="registerButton" onAction="#onRegisterButtonClick" prefWidth="150.0" text="Register" AnchorPane.leftAnchor="230.0" AnchorPane.rightAnchor="230.0" AnchorPane.topAnchor="310.0" />

    <!-- Error Label (For Validation Messages) -->
    <Label fx:id="errorLabel" layoutX="190.0" layoutY="416.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="" textFill="red" AnchorPane.leftAnchor="190.0" AnchorPane.rightAnchor="190.0" AnchorPane.topAnchor="416.0" />

    <!-- Login Hyperlink (Redirect to Login Page) -->
    <Hyperlink fx:id="loginLink" onMouseClicked="#onLoginLinkClick" text="Already have an account? Login" AnchorPane.leftAnchor="197.0" AnchorPane.rightAnchor="197.0" AnchorPane.topAnchor="361.0" />
</AnchorPane>
